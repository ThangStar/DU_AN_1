<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ln_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_title"
                android:text="@string/login"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:textSize="30sp"
                android:textColor="@color/text_color_secondary"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:orientation="vertical"
                android:layout_marginTop="90dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxStrokeWidth="0dp"
                    android:id="@+id/ipl_a"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false"
                    android:textColorHint="@color/text_hint_secondary"
                    app:boxBackgroundColor="@color/background_edittext_primary"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Email"
                        android:id="@+id/edt_a"
                        android:textColor="@color/text_color_secondary"
                        android:paddingVertical="20dp"
                        android:paddingStart="40dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ipl_b"
                    android:layout_marginTop="9dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:hintEnabled="false"
                    android:textColorHint="@color/text_hint_secondary"

                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/background_edittext_primary"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:textColor="@color/text_color_secondary"
                        android:id="@+id/edt_b"
                        android:inputType="textPassword"
                        android:paddingVertical="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Mật khẩu"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ipl_c"
                    android:layout_marginTop="9dp"
                    android:visibility="invisible"
                    app:boxStrokeWidthFocused="0dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:hintEnabled="false"
                    android:textColorHint="@color/text_hint_secondary"

                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/background_edittext_primary"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:id="@+id/edt_c"
                        android:paddingVertical="20dp"
                        android:fontFamily="@font/roboto_medium"

                        android:hint="Họ tên"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ipl_d"
                    android:layout_marginTop="9dp"
                    android:visibility="invisible"
                    app:boxStrokeWidthFocused="0dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:hintEnabled="false"
                    android:textColorHint="@color/text_hint_secondary"

                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/background_edittext_primary"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:id="@+id/edt_d"
                        android:paddingVertical="20dp"
                        android:fontFamily="@font/roboto_medium"

                        android:hint="Mật khẩu"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:paddingVertical="25dp"
                android:id="@+id/btn_ok"
                android:paddingHorizontal="45dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:background="@drawable/ripple_button"
                android:text="Đăng nhập"
                style="@style/Widget.AppCompat.Button.Small"
                android:fontFamily="@font/roboto_bold"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ln_close"
                android:paddingVertical="25dp"
                android:paddingHorizontal="40dp"
                android:clickable="true"
                android:layout_marginVertical="20dp"
                android:elevation="4dp"
                android:translationZ="6dp"
                android:background="@drawable/ripple_button_dark"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close"
                    app:tint="@color/color_icon_primary" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ln_go_login"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:text="Bạn đã có tài khoản?"
                    android:paddingHorizontal="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/ripple_text"
                    android:id="@+id/tv_go_login"
                    android:layout_width="wrap_content"
                    android:text="Đăng Nhập"
                    android:paddingHorizontal="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_in_login"
                android:paddingHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:clickable="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tv_go_forgot"
                    android:text="Quên mật khẩu?"
                    android:padding="5dp"
                    android:background="@drawable/ripple_text"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
                <TextView
                    android:clickable="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tv_go_register"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/ripple_text"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Tạo tài khoản"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>