<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="20dp"
                android:layout_width="80dp"
                app:cardElevation="0dp"
                android:translationZ="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/imv_product"
                    android:src="@drawable/product1"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giày nike"
                        android:layout_marginVertical="6dp"
                        android:textColor="@color/text_color_secondary"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_below="@id/tv_name"
                        android:textColor="@color/text_color_secondary"
                        android:id="@+id/tv_sl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="Số Lượng : 10"
                        android:textSize="11sp" />


                    <TextView
                        android:layout_below="@id/tv_sl"
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="Màu sắc : Xanh, Đỏ,... "
                        android:textSize="11sp" />
                    <TextView
                        android:layout_below="@id/tv_color"
                        android:fontFamily="@font/roboto_light"
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size: X,L,XXX"
                        android:textSize="11sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_below="@id/tv_size"
                        android:layout_marginTop="8dp"
                        app:cardElevation="0dp"
                        android:translationZ="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        app:cardBackgroundColor="@color/item_color_secondary"
                        app:cardCornerRadius="6dp">
                        <TextView
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:id="@+id/tv_tonggia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="d 200000"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>