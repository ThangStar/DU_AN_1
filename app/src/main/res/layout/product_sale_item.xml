<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="3dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingHorizontal="20dp"
            android:background="@drawable/ripple_cart_product_item"
            android:paddingVertical="20dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/imv_product"
                android:src="@drawable/product1"
                android:layout_width="75dp"
                android:layout_height="75dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="25dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:text="Giày nike"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_amount"
                    android:text="Tồn kho: 10"
                    android:layout_marginVertical="3dp"
                    android:textSize="8sp"
                    android:textColor="@color/text_color_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:text="đ 690.000"
                    android:textSize="15sp"
                    android:textColor="@color/button_background_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="right|bottom"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/ripple_item_favorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/add_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>