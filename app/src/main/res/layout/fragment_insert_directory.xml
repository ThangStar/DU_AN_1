<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.fragment_utils_product.InsertDirectoryFragment">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp">

        <ImageView
            android:id="@+id/imv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_text"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:textColor="@color/text_color_secondary"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_title_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/add_dr"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:paddingHorizontal="20dp"
                    android:weightSum="2"
                    android:paddingVertical="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ln_name"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/text_color_secondary"
                                android:id="@+id/tv1"
                                android:layout_marginBottom="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tên danh mục"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_below="@id/tv1"
                                app:counterEnabled="true"
                                app:endIconMode="clear_text"
                                app:counterMaxLength="18"
                                android:layout_height="wrap_content"
                                app:boxStrokeColor="@color/dividingLine"
                                app:boxStrokeWidth="1dp"
                                android:layout_marginBottom="6dp"

                                app:boxCornerRadiusTopEnd="8dp"
                                app:boxCornerRadiusBottomStart="8dp"
                                app:boxCornerRadiusBottomEnd="8dp"
                                app:boxCornerRadiusTopStart="8dp"
                                android:id="@+id/ipl_a"
                                app:hintEnabled="false"
                                android:textColorHint="@color/text_hint_secondary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Tên.."
                                    android:fontFamily="@font/roboto_medium"
                                    android:id="@+id/edt_name"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <ImageButton
                        android:id="@+id/imv_directory"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="@drawable/ripple_text"
                        android:src="@drawable/image_default"
                        android:layout_width="0dp"
                        android:scaleType="fitCenter"
                        android:layout_height="match_parent"
                        android:focusable="true" />
                </LinearLayout>
                <LinearLayout
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/text_color_secondary"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khu vực"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="10dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/dividingLine"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:counterEnabled="true"
                        app:endIconMode="clear_text"
                        app:counterMaxLength="14"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:hintEnabled="false"
                        android:textColorHint="@color/text_hint_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/edt_local"
                            android:layout_height="wrap_content"
                            android:hint="khu vực.."
                            android:fontFamily="@font/roboto_medium"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_insert"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:paddingVertical="15dp"
        android:text="THÊM"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="5dp"
        android:textSize="16sp"
        app:backgroundTint="@color/button_background_primary"
        app:cornerRadius="8dp" />

</RelativeLayout>