<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_primary">

    <androidx.cardview.widget.CardView
        android:id="@+id/info1"
        android:background="@drawable/ripple_cart_product_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá sản phẩm"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/5 ( n Đánh giá)"
                    android:textSize="20dp"
                    android:textColor="@color/button_background_primary"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả   >"
                    android:clickable="true"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info1"
        android:layout_marginTop="3dp" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">
        <LinearLayout
            android:background="@drawable/ripple_cart_product_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình Luận"
                android:textSize="20dp"/>
            <LinearLayout
                android:background="@drawable/ripple_cart_product_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxStrokeWidth="0dp"
                    android:id="@+id/ipl_a"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false"
                    android:textColorHint="@color/text_hint_secondary"
                    app:boxBackgroundColor="@color/background_edittext_primary"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="OK!"
                        android:id="@+id/edt_a"
                        android:textColor="@color/text_color_secondary"
                        android:paddingVertical="20dp"
                        android:paddingStart="40dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right|bottom"
            android:layout_marginHorizontal="18dp"
            android:paddingVertical="15dp"
            android:text="ĐĂNG"
            android:textSize="16sp"
            app:backgroundTint="@color/button_background_primary"
            app:cornerRadius="8dp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>